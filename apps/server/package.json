{
  "name": "server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"tsx watch server/server.ts\" \"vite\"",
    "dev-client": "vite",
    "build": "vite build --config vite.config.ts && tsup server/server.ts --format esm --target node20 --dts false --splitting false --minify",
    "start": "NODE_ENV=production node dist/server/server.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/middie": "9.0.3",
    "@fastify/static": "8.2.0",
    "fastify": "5.6.0"
  },
  "devDependencies": {
    "@types/node": "24.5.2",
    "tsup": "8.5.0",
    "tsx": "4.20.5",
    "typescript": "5.9.2"
  }
}
