{
  "name": "@cappa/server",
  "version": "0.1.0",
  "type": "module",
  "files": [
    "dist",
    "public"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/server.js",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/server.ts",
    "build": "./bin/build.sh",
    "build:ts": "tsup src/server.ts --format esm --target node20 --splitting false",
    "start": "NODE_ENV=production node dist/server.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/middie": "9.0.3",
    "@fastify/static": "8.2.0",
    "fastify": "5.6.0",
    "@cappa/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "24.5.2",
    "tsup": "8.5.0",
    "tsx": "4.20.5",
    "typescript": "5.9.2"
  }
}
