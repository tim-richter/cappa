{
  "name": "@cappa/server",
  "version": "0.2.0",
  "type": "module",
  "license": "MIT",
  "author": "Tim Richter",
  "files": [
    "dist",
    "public"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tim-richter/cappa.git"
  },
  "main": "dist/server.js",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/server.ts",
    "build": "./bin/build.sh",
    "build:ts": "tsup src/server.ts --format esm --target node20 --splitting false",
    "start": "NODE_ENV=production node dist/server.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@cappa/core": "workspace:*",
    "@fastify/middie": "9.0.3",
    "@fastify/static": "8.3.0",
    "fastify": "5.6.1",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "memfs": "^4.50.0",
    "tsup": "catalog:",
    "tsx": "4.20.6",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
