{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "*.d.ts", "*.d.cts", "public/**"],
      "inputs": [
        "build.sh",
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsdown.config.ts",
        "tsup.config.ts",
        "package.json",
        "tsconfig.json"
      ]
    },
    "tsc": {
      "dependsOn": ["^tsc"],
      "outputs": ["dist/**/*.d.ts", "dist/**/*.d.cts"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig.json"]
    },
    "test:run": {
      "dependsOn": ["^test:run"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig.json"]
    }
  }
}
