{
  "name": "cappa",
  "version": "0.0.1",
  "description": "A Playwright-based screenshot tool with plugin system",
  "author": "Tim Richter",
  "license": "MIT",
  "private": true,
  "type": "module",
  "keywords": [
    "screenshot",
    "playwright",
    "capture"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tim-richter/cappa.git"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "dev": "pnpm -r dev",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "tsc": "pnpm -r tsc",
    "attw": "pnpm -r attw",
    "release": "turbo build && pnpm --filter server build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@changesets/cli": "^2.29.8",
    "@types/node": "catalog:",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.25.0",
  "msw": {
    "workerDirectory": [
      "apps/web/public"
    ]
  }
}
