{
  "name": "cappa",
  "version": "0.0.1",
  "description": "A Playwright-based screenshot tool with plugin system",
  "author": "Tim Richter",
  "license": "MIT",
  "private": true,
  "type": "module",
  "keywords": [
    "screenshot",
    "playwright",
    "capture"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "clean": "pnpm -r clean",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "example:storybook": "pnpm --filter @cappa/example-storybook screenshot"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@changesets/cli": "^2.29.7",
    "@types/node": "catalog:",
    "turbo": "^2.5.6",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.16.1",
  "msw": {
    "workerDirectory": [
      "public",
      "apps/web/public"
    ]
  }
}