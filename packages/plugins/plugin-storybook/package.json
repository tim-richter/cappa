{
  "name": "@cappa/plugin-storybook",
  "version": "0.3.2",
  "description": "Storybook plugin for Cappa - takes screenshots of Storybook stories",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "Tim Richter",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./browser": {
      "default": "./dist/browser.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "vitest",
    "build": "tsup",
    "tsc": "tsc"
  },
  "keywords": [
    "screenshot",
    "plugin",
    "storybook",
    "visual-testing"
  ],
  "peerDependencies": {
    "storybook": "^9 || ^10"
  },
  "peerDependenciesMeta": {
    "storybook": {
      "optional": false
    }
  },
  "dependencies": {
    "@cappa/core": "workspace:*",
    "@cappa/logger": "workspace:*",
    "@swc/core": "^1.14.0",
    "chalk": "^5.6.2",
    "minimatch": "^10.1.1"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "playwright-core": "^1.56.1",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "storybook": "^10.0.2"
  }
}
