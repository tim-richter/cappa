{
  "name": "@cappa/plugin-storybook",
  "version": "0.2.2",
  "description": "Storybook plugin for Cappa - takes screenshots of Storybook stories",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "CommonJS",
  "license": "MIT",
  "author": "Tim Richter",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./browser": {
      "import": "./dist/browser.mjs",
      "require": "./dist/browser.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "vitest",
    "build": "tsup",
    "tsc": "tsc"
  },
  "keywords": [
    "screenshot",
    "plugin",
    "storybook",
    "visual-testing"
  ],
  "dependencies": {
    "@cappa/core": "workspace:*",
    "@cappa/logger": "workspace:*",
    "@swc/core": "^1.13.5",
    "chalk": "^5.6.2",
    "storybook": "^9.1.12"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "playwright-core": "^1.56.0",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
